<section class="row justify-content-center">
  <div class="col-md-5 col-lg-4">
    <div class="form-reset-password">
      {% form 'reset_customer_password' %}

        <h1>{{ 'customer.reset_password.title' | t }}</h1>

        <p>{{ 'customer.reset_password.subtext' | t: email: email }}</p>

        {{ form.errors | default_errors }}

        <div class="field">
          <label for="ResetPassword">{{ 'customer.reset_password.password' | t }}</label>
          <input type="password"
            name="customer[password]"
            id="ResetPassword"
            class="form-control{% if form.errors contains 'password' %} is-invalid{% endif %}"
            placeholder="{{ 'general.misc.generic_placeholder' | t }}" required>
        </div>

        <div class="field">
          <label for="PasswordConfirmation">{{ 'customer.reset_password.password_confirm' | t }}</label>
          <input type="password"
            name="customer[password_confirmation]"
            id="PasswordConfirmation"
            class="form-control{% if form.errors contains 'password_confirmation' %} is-invalid{% endif %}"
            placeholder="{{ 'general.misc.generic_placeholder' | t }}" required>
        </div>

        <button type="submit" class="button button--primary">{{ 'customer.reset_password.submit' | t }}</button>
      {% endform %}
    </div>
  </div>
</section>
